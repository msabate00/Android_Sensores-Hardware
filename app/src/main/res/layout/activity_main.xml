<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_act_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Actividad 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_act_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Actividad 2"
        app:layout_constraintEnd_toEndOf="@+id/btn_act_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_act_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_act_1" />

    <Button
        android:id="@+id/btn_act_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Actividad 3"
        app:layout_constraintEnd_toEndOf="@+id/btn_act_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_act_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_act_2" />

    <Button
        android:id="@+id/btn_act_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Actividad 4"
        app:layout_constraintEnd_toEndOf="@+id/btn_act_3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_act_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_act_3" />

    <Button
        android:id="@+id/btn_act_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Actividad 5"
        app:layout_constraintEnd_toEndOf="@+id/btn_act_4"
        app:layout_constraintStart_toStartOf="@+id/btn_act_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_act_4" />

    <Button
        android:id="@+id/btn_act_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Actividad 6"
        app:layout_constraintEnd_toEndOf="@+id/btn_act_5"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/btn_act_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_act_5" />

    <Button
        android:id="@+id/btn_act_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:enabled="false"
        android:text="Actividad 7"
        app:layout_constraintEnd_toEndOf="@+id/btn_act_6"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/btn_act_6"
        app:layout_constraintTop_toBottomOf="@+id/btn_act_6" />

    <Button
        android:id="@+id/btn_act_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Actividad 8"
        app:layout_constraintEnd_toEndOf="@+id/btn_act_7"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/btn_act_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_act_7" />

    <Button
        android:id="@+id/btn_act_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Actividad 9"
        app:layout_constraintEnd_toEndOf="@+id/btn_act_8"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/btn_act_8"
        app:layout_constraintTop_toBottomOf="@+id/btn_act_8" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="En otra actividad"
        app:layout_constraintBottom_toBottomOf="@+id/btn_act_7"
        app:layout_constraintStart_toEndOf="@+id/btn_act_7"
        app:layout_constraintTop_toTopOf="@+id/btn_act_7" />
</androidx.constraintlayout.widget.ConstraintLayout>